{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "moduleDetection": "force",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,        // lets you migrate gradually from .js/.jsx
    "checkJs": false,       // set true if you want JS to be type-checked
    "resolveJsonModule": true,     // helpful for your i18n/*.json imports
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src"]
}
